package egret.core
{
	
	/**
	 * 全局默认样式
	 * @author dom
	 */
	public class GlobalStyles
	{
		/**
		 * 全局默认字体名称
		 */		
		public static var fontFamily:String = "SimSun";
		/**
		 * 全局嵌入字体名称,此属性只作用于Label实例。对输入框文本无效。
		 */
		public static var embedFontFamily:String = "";
		/**
		 * 全局默认文本字号大小
		 */		
		public static var size:uint = 12;
		/**
		 * 全局默认文本颜色
		 */		
		public static var textColor:uint = 0x000000;
		
	}
}